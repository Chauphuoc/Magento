</script>
<script>
    require([
        'jquery'
    ],
    function($){
        $(document).ready(function(){
            let a= 1;
            if(a>=0){
                $('.btn-success').click(function(){
                a++;
                $('#qty').val(a);
                console.log(a);
                })
                $('.btn-danger').click(()=>{
                    a--;
                    $('#qty').val(a);
                
                    if(a<0){
                    a=0
                    $('#qty').val(a);
                    
            }
                })
            }
            
            
        })
        
    }
    )
</script>
