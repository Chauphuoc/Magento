
<script>
require([
    "jquery",
    "owlcarousel"
],
function($,owlcarousel){
    $(document).ready(function(){
            $('.owl-carousel').owlCarousel({
                loop:false,
                margin:0,
                nav:false,
                dots:true,
                autoPlay:1000,
                responsive:{
                    0:{
                        items:1
                    },
                    600:{
                        items:3
                    },
                    1000:{
                        items:4
                    }
                }
              })
        });
});

</script>