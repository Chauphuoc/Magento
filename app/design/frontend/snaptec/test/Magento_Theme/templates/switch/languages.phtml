<?php if (count($block->getStores())>1) : ?>
    <?php $id = $block->getIdModifier() ? '-' . $block->getIdModifier() : '' ?>
    <li class="switcher language switcher-language col-lg-2" data-ui-id="language-switcher" id="switcher-language<?= $block->escapeHtmlAttr($id) ?>">

        <div class="dropdown actions options switcher-options ">
            <button class="btn btn-primary dropdown-toggle"
                    type="button"
                    id="switcher-language-trigger<?= $block->escapeHtmlAttr($id) ?>"
                    data-mage-init='{"dropdown":{}}'
                    data-toggle="dropdown"
                    aria-expanded="false"
                    aria-labelledby="switcher-language-trigger<?= $block->escapeHtmlAttr($id) ?>"
                    data-trigger-keypress-button="true">
